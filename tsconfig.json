{
  "compilerOptions": {
    "target": "ESNext",
    "noEmitOnError": false,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["vue", "vue-router"],
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/store/modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
